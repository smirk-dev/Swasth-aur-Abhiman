# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=swastha_aur_abhiman

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# ==================== Cloud Storage Configuration ====================
# Set ENABLE_CLOUD_STORAGE=true to enable AWS S3 or MinIO
ENABLE_CLOUD_STORAGE=false

# AWS S3 Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=swastha-aur-abhiman-uploads
AWS_S3_PRESCRIPTIONS_BUCKET=swastha-prescriptions-private

# Optional: CloudFront Distribution for CDN
CLOUDFRONT_DOMAIN=

# MinIO Configuration (Alternative to AWS S3)
# Set USE_MINIO=true to use MinIO instead of AWS S3
USE_MINIO=false
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Application Configuration
PORT=3000
NODE_ENV=development

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Admin Dashboard Configuration
ADMIN_DASHBOARD_URL=http://localhost:3001
